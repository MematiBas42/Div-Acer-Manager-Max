<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DivAcerManagerMax.Dashboard"
             xmlns:material="using:Material.Icons.Avalonia">

    <ScrollViewer>
        <Grid Margin="20" RowDefinitions="Auto,*" ColumnDefinitions="*,*,*">
            <!-- Row 1: CPU, GPU, Fan Control -->
            
            <!-- CPU Card -->
            <Border Classes="Card" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock x:Name="CpuTitle" Grid.Column="0" Text="CPU" Classes="SubHeader"/>
                        <material:MaterialIcon Grid.Column="1" Kind="Cpu64Bit" Width="24" Height="24" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Model:" Opacity="0.7" Width="90" VerticalAlignment="Center" />
                        <TextBlock x:Name="CpuModel" Text="Intel i5-13500f 13th Gen" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </DockPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,7,0,0" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Temperature:" Opacity="0.7" Width="90" VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right">
                            <TextBlock x:Name="CpuTemperature" Text="65°C" FontWeight="SemiBold" Width="50" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="CpuTemperatureBar" Value="65" Maximum="100" MinWidth="10" MaxWidth="Infinity" Margin="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Border>
            
            <!-- GPU Card -->
            <Border Classes="Card" Grid.Row="0" Grid.Column="1" Margin="5,0,5,10">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock x:Name="GpuTitle" Grid.Column="0" Text="GPU" Classes="SubHeader"/>
                        <material:MaterialIcon Grid.Column="1" Kind="Gpu" Width="24" Height="24" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Model:" Opacity="0.7" Width="90" VerticalAlignment="Center"/>
                        <TextBlock x:Name="GpuModel" Text="NVIDIA RTX 4060" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </DockPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Temperature:" Opacity="0.7" Width="90" VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right">
                            <TextBlock x:Name="GpuTemperature" Text="70°C" FontWeight="SemiBold" Width="50" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="GpuTemperatureBar" Value="70" Maximum="100" MinWidth="10" MaxWidth="Infinity" Margin="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="VRAM Usage:" Opacity="0.7" Width="90" VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right">
                            <TextBlock x:Name="GpuVramUsage" Text="5.2 GB / 8 GB" FontWeight="SemiBold" Width="90" VerticalAlignment="Center"/>
                            <ProgressBar x:Name="GpuVramBar" Value="65" Maximum="100" MinWidth="10" MaxWidth="Infinity" Margin="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DockPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Driver:" Opacity="0.7" Width="90" VerticalAlignment="Center"/>
                        <TextBlock x:Name="GpuDriver" Text="535.129.03" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </DockPanel>
                </StackPanel>
            </Border>
            
            <!-- Fan Control Card -->
            <Border Classes="Card" Grid.Row="0" Grid.Column="2" Margin="10,0,0,10">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock x:Name="FanControlTitle" Grid.Column="0" Text="Fan Control" Classes="SubHeader"/>
                        <material:MaterialIcon Grid.Column="1" Kind="Fan" Width="24" Height="24" HorizontalAlignment="Right"/>
                    </Grid>
        
                    <DockPanel LastChildFill="True" Margin="0,7,0,0" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="CPU Fan:" Opacity="0.7" Width="90" VerticalAlignment="Center" />
                        <TextBlock x:Name="CpuFanSpeed" Text="2400 RPM" FontWeight="SemiBold" VerticalAlignment="Center" />
                    </DockPanel>
            
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="GPU Fan:" Opacity="0.7" Width="90" VerticalAlignment="Center" />
                        <TextBlock x:Name="GpuFanSpeed" Text="3100 RPM" FontWeight="SemiBold" VerticalAlignment="Center" />
                    </DockPanel>
            
                    <DockPanel LastChildFill="True" Margin="0,2" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Fan Mode:" Opacity="0.7" Width="90" VerticalAlignment="Center" />
                        <ComboBox x:Name="FanModeSelector" DockPanel.Dock="Right" SelectedIndex="0" Width="120">
                            <ComboBoxItem>Auto</ComboBoxItem>
                            <ComboBoxItem>Performance</ComboBoxItem>
                            <ComboBoxItem>Silent</ComboBoxItem>
                        </ComboBox>
                    </DockPanel>
                </StackPanel>
            </Border>
            
            <!-- Row 2: Temperature Monitor (expanded) -->
            <Border Classes="Card" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,5,10">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock x:Name="TemperatureMonitorTitle" Grid.Column="0" Text="Temperature Monitor" Classes="SubHeader"/>
                        <material:MaterialIcon Grid.Column="1" Kind="Thermometer" Width="24" Height="24" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <!-- Mock temperature chart/graph -->
                    <Border Background="#1e1e20" CornerRadius="5" Height="300" Margin="0,10,0,0">
                        <Canvas x:Name="TemperatureGraph">
                            <TextBlock Text="Temperature Graph" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                        </Canvas>
                    </Border>
                    
                    <DockPanel LastChildFill="True" Margin="0,10,0,0">
                        <TextBlock DockPanel.Dock="Left" Text="Show:" Opacity="0.7" Width="50" VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <CheckBox x:Name="ShowCpuTemperature" Content="CPU" IsChecked="True" Margin="0,0,10,0"/>
                            <CheckBox x:Name="ShowGpuTemperature" Content="GPU" IsChecked="True" Margin="0,0,10,0"/>
                            <CheckBox x:Name="ShowSsdTemperature" Content="SSD" IsChecked="False"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Border>
            
            <!-- Battery Card (Now smaller) -->
            <Border Classes="Card" Grid.Row="1" Grid.Column="2" Margin="10,0,0,10">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock x:Name="BatteryTitle" Grid.Column="0" Text="Battery" Classes="SubHeader"/>
                        <material:MaterialIcon Grid.Column="1" Kind="Battery70" Width="24" Height="24" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                        <ProgressBar x:Name="BatteryLevelBar" Value="70" Maximum="100" Width="180" Height="16"/>
                        <TextBlock x:Name="BatteryPercentage" Text="70%" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,20,0,10" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Power Source:" Opacity="0.7" Width="110" VerticalAlignment="Center"/>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <material:MaterialIcon Kind="PowerPlugOutline" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock x:Name="PowerSource" Text="AC Adapter" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DockPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,0,0,10" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Remaining:" Opacity="0.7" Width="110" VerticalAlignment="Center"/>
                        <TextBlock x:Name="BatteryTimeRemaining" Text="3 hr 45 min" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </DockPanel>
                    
                    <DockPanel LastChildFill="True" Margin="0,0,0,10" VerticalAlignment="Center">
                        <TextBlock DockPanel.Dock="Left" Text="Power Mode:" Opacity="0.7" Width="110" VerticalAlignment="Center"/>
                        <ComboBox x:Name="PowerModeSelector" DockPanel.Dock="Right" SelectedIndex="1" Width="120">
                            <ComboBoxItem>Battery Saver</ComboBoxItem>
                            <ComboBoxItem>Balanced</ComboBoxItem>
                            <ComboBoxItem>Performance</ComboBoxItem>
                        </ComboBox>
                    </DockPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>