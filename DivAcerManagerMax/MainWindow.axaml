<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="using:Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="650"
        x:Class="DivAcerManagerMax.MainWindow"
        Title="DAMX"
        WindowStartupLocation="CenterScreen"
        Background="#0e0e11"

        Width="1000" Height="700"
        MinWidth="900" MinHeight="480">
  

  

  <Grid RowDefinitions="Auto,*">
    <!-- App Header -->
    <Border Grid.Row="0"  Padding="20 10" CornerRadius="20">
      <StackPanel HorizontalAlignment="Right" Margin="5" Orientation="Horizontal">

          

        <TextBlock Text="Div Acer Manager Max" FontSize="22" FontWeight="Bold" 
                   LetterSpacing="4" VerticalAlignment="Center" 
                   HorizontalAlignment="Left" Margin="0"
                   FontFamily="{StaticResource OxaniumBoldFont}">
          <TextBlock.Foreground>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
              <GradientStop Offset="0" Color="#65bdf5"/>
              <GradientStop Offset="1" Color="#4093f1"/>
            </LinearGradientBrush>
          </TextBlock.Foreground>
        </TextBlock>
 </StackPanel>
    </Border>
    
    <!-- Main Content -->
    <TabControl Grid.Row="1" Margin="10,0,10,10" CornerRadius="20" Background="#18181b" BorderBrush="#18181b" BorderThickness="5" TabStripPlacement="Left" >
      <!-- Power & Performance Tab -->
      <TabItem Header="Power &amp; Performance">
        <ScrollViewer>
          <StackPanel Margin="10,0,20,0">
            <TextBlock Text="Power &amp; Performance" Classes="SectionHeader"/>
            
          <Border Classes="Card" x:Name="ThermalProfilePanel" >
          <StackPanel>
              <!-- Header row with switch -->
              <Grid ColumnDefinitions="*,Auto" Margin="0 0 0 10">
                  <TextBlock Text="Performance Profiles" Classes="SubHeader" VerticalAlignment="Center"/>
                  <ToggleSwitch x:Name="PluggedInToggleSwitch" Grid.Column="1" VerticalAlignment="Center" IsChecked="True" IsHitTestVisible="False">
                      <ToggleSwitch.OffContent>
                          <material:MaterialIcon Kind="BatteryOutline" Width="24" Height="24"/>
                      </ToggleSwitch.OffContent>
                      <ToggleSwitch.OnContent>
                          <material:MaterialIcon Kind="PowerPlugOutline" Width="24" Height="24"/>
                      </ToggleSwitch.OnContent>
                  </ToggleSwitch>
              </Grid>
              
        <TextBlock Text="Configure thermal profiles to balance performance and temperature" Opacity="0.7" Margin="0 0 0 10"/>
        
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0 10">
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center" >
                <RadioButton x:Name="LowPowerProfileButton" GroupName="ProfileGroup" Margin="0 0 15 0" IsVisible="{Binding ElementName=PluggedInToggleSwitch, Path=!IsChecked}" >
                    <StackPanel>
                        <material:MaterialIcon Kind="Leaf" Width="48" Height="48"/>
                        <TextBlock Text="Eco" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                
                <RadioButton x:Name="QuietProfileButton" GroupName="ProfileGroup" Margin="0 0 15 0" IsVisible="{Binding ElementName=PluggedInToggleSwitch, Path=IsChecked}">
                    <StackPanel>
                        <material:MaterialIcon Kind="FanMinus" Width="48" Height="48"/>
                        <TextBlock Text="Quiet" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                
                <RadioButton x:Name="BalancedProfileButton" GroupName="ProfileGroup" Margin="0 0 15 0" IsChecked="True">
                    <StackPanel>
                        <material:MaterialIcon Kind="Bicycle" Width="48" Height="48"/>
                        <TextBlock Text="Balanced" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                
                <RadioButton x:Name="PerformanceProfileButton" GroupName="ProfileGroup" Margin="0 0 15 0" IsVisible="{Binding ElementName=PluggedInToggleSwitch, Path=IsChecked}">
                    <StackPanel>
                        <material:MaterialIcon Kind="CarSide" Width="48" Height="48"/>
                        <TextBlock Text="Performance" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                
                <RadioButton x:Name="TurboProfileButton" GroupName="ProfileGroup" Margin="0 0 15 0" IsVisible="{Binding ElementName=PluggedInToggleSwitch, Path=IsChecked}">
                    <StackPanel>
                        <material:MaterialIcon Kind="RocketLaunch" Width="48" Height="48" />
                        <TextBlock Text="Turbo" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Grid>
        
        <TextBlock x:Name="ThermalProfileInfoText" Opacity="0.7" 
                   Text="Performance profiles are preset modes that control your device's speed, power use, and cooling:" 
                   HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</Border>
            
            <!-- Fan Speed Control -->
            <Border Classes="Card"  x:Name="FanControlPanel" >
              <StackPanel>
                <TextBlock Text="Fan Speed Control" Classes="SubHeader"/>
                <TextBlock Text="Set custom fan speeds for CPU and GPU" Opacity="0.7" Margin="0 0 0 10"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="AutoFanSpeedRadioButton" GroupName="FanModeGroup" Margin="0 0 15 0" IsChecked="True">
                  <StackPanel>
                    <material:MaterialIcon Kind="AutoAwesome" Width="48" Height="48"  />
                    <TextBlock Text="Auto" HorizontalAlignment="Center"></TextBlock>
                  </StackPanel>
                </RadioButton>
                 
                <RadioButton x:Name="ManualFanSpeedRadioButton" GroupName="FanModeGroup" Margin="0 0 15 0" >
                  <StackPanel>
                    <material:MaterialIcon Kind="CarManualTransmission" Width="48" Height="48"/>
                    <TextBlock Text="Manual" HorizontalAlignment="Center" ></TextBlock>
                  </StackPanel>
                </RadioButton>  

                </StackPanel>
                  <TextBlock x:Name="ManualDisabledInfoText" Opacity="0.5" Text="Manual fan controls are disabled to ensure quiet operation" HorizontalAlignment="Center" Margin="0,20,0 ,0" IsVisible="{Binding ElementName=QuietProfileButton, Path=IsChecked}"/>
                
                <StackPanel IsVisible="{Binding ElementName=ManualFanSpeedRadioButton , Path=IsChecked}">
       
                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" Margin="0 5">
                  <TextBlock Grid.Row="0" Grid.Column="0" Text="CPU Fan:" VerticalAlignment="Center" Width="80"/>
                  <Slider x:Name="CpuFanSlider" Grid.Row="0" Grid.Column="1" Value="50"/>
                  <TextBlock x:Name="CpuFanTextBlock" Grid.Row="0" Grid.Column="2" Text="50%" Width="50" TextAlignment="Right"/>
                  
                  <TextBlock Grid.Row="1" Grid.Column="0" Text="GPU Fan:" VerticalAlignment="Center" Width="80" Margin="0 15 0 0"/>
                  <Slider x:Name="GpuFanSlider" Grid.Row="1" Grid.Column="1" Value="70" Margin="0 15 0 0"/>
                  <TextBlock x:Name="GpuFanTextBlock" Grid.Row="1" Grid.Column="2" Text="70%" Width="50" TextAlignment="Right" Margin="0 15 0 0"/>
                </Grid>
                
                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                  <Button x:Name="SetManualSpeedButton" Content="Apply Fan Settings" Margin="0 0 10 0" Click="SetManualSpeedButton_OnClick"/>
                </StackPanel>
                
                <TextBlock Text="Note: Low fan speeds may result in higher temperatures" Foreground="#FFA500" Margin="0 10 0 0" FontSize="12"/>
              </StackPanel>
              </StackPanel>
            </Border>
          </StackPanel>
        </ScrollViewer>
      </TabItem>
      
      <!-- Power Controls Tab -->
      <TabItem Header="Battery Controls" x:Name="BatteryPanel">
        <ScrollViewer>
          <StackPanel Margin="10,0,20,0">
            <TextBlock Text="Power Controls" Classes="SectionHeader"/>
            
            <!-- Battery Calibration -->
            <Border Classes="Card" x:Name="CalibrationControls">
              <StackPanel>
                <TextBlock Text="Battery Calibration" Classes="SubHeader"/>
                <TextBlock Text="Calibrate your battery to get accurate battery percentage readings" 
                         Opacity="0.7" TextWrapping="Wrap" Margin="0 0 0 10"/>
                
                <Grid ColumnDefinitions="*,Auto" Margin="0 10">
                  <StackPanel Grid.Column="0">
                    <TextBlock x:Name="CalibrationStatusTextBlock" Text="Status: Not calibrating" FontWeight="SemiBold"/>
                    <TextBlock Text="Battery calibration will fully charge, drain, and recharge your battery." TextWrapping="Wrap" Margin="0 5 0 0" Opacity="0.7"/>
                    <TextBlock Text="Do not unplug AC power during calibration." Foreground="#FFA500" Margin="0 5 0 0"/>
                  </StackPanel>
                  
                  <StackPanel Grid.Column="1" Orientation="Vertical">
                    <Button x:Name="StartCalibrationButton" Content="Start Calibration" Margin="0 0 0 5"/>
                    <Button x:Name="StopCalibrationButton" Content="Stop Calibration" IsEnabled="False" Background="#444444"/>
                  </StackPanel>
                </Grid>
              </StackPanel>
            </Border>
            
            <!-- Charge Limit -->
            <Border Classes="Card" x:Name="LimiterControls">
              <StackPanel>
                <TextBlock Text="Battery Charge Limit" Classes="SubHeader"/>
                <TextBlock Text="Limit maximum battery charge to extend battery lifespan" Opacity="0.7" Margin="0 0 0 10"/>
                
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="0 10">
                  <CheckBox x:Name="BatteryLimitCheckBox" Grid.Column="0" Content="Enable Battery Limit" Margin="0 0 10 0"/>
                  <TextBlock Grid.Column="2" Text="Limit to 80%" VerticalAlignment="Center"/>
                </Grid>
                
                <TextBlock Text="Recommended for laptops that are frequently connected to AC power" 
                         Opacity="0.7" TextWrapping="Wrap" Margin="0 10 0 0"/>
              </StackPanel>
            </Border>
            
            <!-- USB Power Delivery -->
            <Border Classes="Card" x:Name="UsbChargingPanel">
              <StackPanel>
                <TextBlock Text="USB Power Delivery" Classes="SubHeader"/>
                <TextBlock Text="Configure USB charging when laptop is powered off" Opacity="0.7" Margin="0 0 0 10"/>
                
                <ComboBox x:Name="UsbChargingComboBox" SelectedIndex="2" Width="300" HorizontalAlignment="Left" Margin="0 10">
                  <ComboBoxItem Content="Disabled"/>
                  <ComboBoxItem Content="Until battery reaches 10%"/>
                  <ComboBoxItem Content="Until battery reaches 20%"/>
                  <ComboBoxItem Content="Until battery reaches 30%"/>
                </ComboBox>
                
                <Button x:Name="UsbChargeButton" Content="Apply" Margin="0 10 0 0"/>
              </StackPanel>
            </Border>
          </StackPanel>

        </ScrollViewer>
      </TabItem>
      
      <!-- Keyboard Lighting Tab -->
      <TabItem Header="Keyboard Lighting" x:Name="KeyboardLightingPanel">
        <ScrollViewer>
          <StackPanel Margin="10,0,20,0">
            <TextBlock Text="Keyboard Lighting" Classes="SectionHeader"/>
            <!-- Zone Color Control -->
            <Border Classes="Card" x:Name="ZoneColorControlPanel">
              <StackPanel>
                <TextBlock Text="Zone Color Control" Classes="SubHeader"/>
                <TextBlock Text="Customize colors for each keyboard zone" Opacity="0.7" Margin="0 0 0 10"/>
                
                  <Grid Margin="0 10">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Zone 1 -->
            <Grid Grid.Column="0" Grid.Row="0" Margin="10,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Zone 1:" VerticalAlignment="Center" Margin="0 0 10 15"/>
              <Border x:Name="Zone1Border" Grid.Column="1" Background="#4287f5" Height="30" CornerRadius="3" Margin="0 0 10 15"/>
              <Button x:Name="PickColor1Button" Grid.Column="2" Content="Pick Color" Margin="0 0 0 15"/>
            </Grid>

            <!-- Zone 2 -->
            <Grid Grid.Column="1" Grid.Row="0" Margin="10,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Zone 2:" VerticalAlignment="Center" Margin="0 0 10 15"/>
              <Border x:Name="Zone2Border"  Grid.Column="1" Background="#ff5733" Height="30" CornerRadius="3" Margin="0 0 10 15"/>
              <Button x:Name="PickColor2Button" Grid.Column="2" Content="Pick Color" Margin="0 0 0 15"/>
            </Grid>

            <!-- Zone 3 -->
            <Grid Grid.Column="0" Grid.Row="1" Margin="10,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Zone 3:" VerticalAlignment="Center" Margin="0 0 10 15"/>
              <Border x:Name="Zone3Border"  Grid.Column="1" Background="#33ff57" Height="30" CornerRadius="3" Margin="0 0 10 15"/>
              <Button x:Name="PickColor3Button" Grid.Column="2" Content="Pick Color" Margin="0 0 0 15"/>
            </Grid>

            <!-- Zone 4 -->
            <Grid Grid.Column="1" Grid.Row="1" Margin="10,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Zone 4:" VerticalAlignment="Center" Margin="0 0 10 15"/>
              <Border x:Name="Zone4Border"  Grid.Column="1" Background="#ff33a6" Height="30" CornerRadius="3" Margin="0 0 10 15"/>
              <Button x:Name="PickColor4Button" Grid.Column="2" Content="Pick Color" Margin="0 0 0 15"/>
            </Grid>

            <!-- Brightness -->
            <Grid Grid.ColumnSpan="2" Grid.Row="2">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Brightness:" VerticalAlignment="Center" Margin="0 0 10 0"/>
              <Slider x:Name="KeyBrightnessSlider" Grid.Column="1" Value="100" Margin="0 0 10 0"/>
              <TextBlock x:Name="KeyBrightnessText" Grid.Column="2" Text="100%" VerticalAlignment="Center"/>
            </Grid>
          </Grid>

                
                <Button x:Name="ApplyKeyboardColorsButton" Content="Apply Zone Colors" Margin="0 15 0 0"/>
              </StackPanel>
            </Border>

            <!-- Lighting Effects -->
            <Border Classes="Card" x:Name="KeyboardEffectsPanel">
              <StackPanel>
                <TextBlock Text="Lighting Effects" Classes="SubHeader"/>
                <TextBlock Text="Choose dynamic lighting effects for your keyboard" Opacity="0.7" Margin="0 0 0 10"/>
                
                <ComboBox x:Name="LightingModeComboBox" SelectedIndex="0" Width="200" HorizontalAlignment="Left" Margin="0 10">
                  <ComboBoxItem Content="Static Mode"/>
                  <ComboBoxItem Content="Breathing Mode"/>
                  <ComboBoxItem Content="Neon Mode"/>
                  <ComboBoxItem Content="Wave Mode"/>
                  <ComboBoxItem Content="Shifting Mode"/>
                  <ComboBoxItem Content="Zoom Mode"/>
                  <ComboBoxItem Content="Meteor Mode"/>
                  <ComboBoxItem Content="Twinkling Mode"/>
                </ComboBox>
                
                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto" Margin="0 15">
                  <TextBlock Grid.Row="0" Grid.Column="0" Text="Speed:" VerticalAlignment="Center" Width="80"/>
                  <Slider x:Name="LightingSpeedSlider" Grid.Row="0" Grid.Column="1" Value="5" Maximum="9" Minimum="0"/>
                  <TextBlock x:Name="LightSpeedTextBlock" Grid.Row="0" Grid.Column="2" Text="5" Width="30" TextAlignment="Right"/>
                  
                  <TextBlock Grid.Row="1" Grid.Column="0" Text="Color:" VerticalAlignment="Center" Width="80" Margin="0 15 0 0"/>
                  <Border x:Name="EffectColorBorder" Grid.Row="1" Grid.Column="1" Background="#0078D7" Height="30" CornerRadius="3" Margin="0 15 10 0"/>
                  <Button x:Name="LightingEffectsColorPickButton" Grid.Row="1" Grid.Column="2" Content="Pick" Margin="0 15 0 0"/>
                  
                  <TextBlock Grid.Row="2" Grid.Column="0" Text="Direction:" VerticalAlignment="Center" Width="80" Margin="0 15 0 0"/>
                  <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0 15 0 0">
                    <RadioButton x:Name="LeftToRightRadioButton" GroupName="DirectionGroup" IsChecked="True" Margin="0 0 15 0">
                      <StackPanel>
                        <material:MaterialIcon Kind="ArrowRight" Width="48" Height="48"/>
                        <TextBlock Text="Left To Right" HorizontalAlignment="Center" ></TextBlock>
                      </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="RightToLeftRadioButton"  GroupName="DirectionGroup">
                    <StackPanel>
                      <material:MaterialIcon Kind="ArrowLeft" Width="48" Height="48"/>
                      <TextBlock Text="Right to Left" HorizontalAlignment="Center" ></TextBlock>
                    </StackPanel>
                    </RadioButton>
                  </StackPanel>
                </Grid>
                
                <Button x:Name="LightingEffectsApplyButton" Content="Apply Effect" Margin="0 5 0 0"/>
              </StackPanel>
            </Border>
            
            <!-- Backlight Timeout -->
            <Border Classes="Card" x:Name="BacklightTimeoutControls">
              <StackPanel>
                <TextBlock Text="Backlight Timeout" Classes="SubHeader"/>
                <TextBlock Text="Automatically turn off keyboard lighting after period of inactivity" Opacity="0.7" Margin="0 0 0 10"/>
                
                <CheckBox x:Name="BacklightTimeoutCheckBox" Content="Enable backlight timeout (30 seconds)" IsChecked="True" Margin="0 10"/>
              </StackPanel>
            </Border>

          </StackPanel>
        </ScrollViewer>
      </TabItem>
      
      <!-- System Settings Tab -->
      <TabItem Header="System Settings" x:Name="SystemSettingsPanel">
        <ScrollViewer>
          <StackPanel Margin="10,0,20,0">
            <TextBlock Text="System Settings" Classes="SectionHeader"/>
            
            <!-- LCD Override -->
            <Border Classes="Card" x:Name="LcdOverrideControls">
              <StackPanel>
                <TextBlock Text="LCD Override" Classes="SubHeader"/>
                <TextBlock Text="Reduce LCD latency and minimize ghosting" Opacity="0.7" Margin="0 0 0 10"/>
                
                <CheckBox x:Name="LcdOverrideCheckBox" Content="Enable LCD Override" IsChecked="True" Margin="0 10"/>
                <TextBlock Text="Note: May increase battery consumption" Foreground="#FFA500" FontSize="12" Margin="0 5"/></StackPanel>
            </Border>
            
            <!-- Boot Sound and Animation -->
            <Border Classes="Card" x:Name="BootSoundControls">
              <StackPanel>
                <TextBlock Text="Boot Sound and Animation" Classes="SubHeader"/>
                <TextBlock Text="Enable or disable custom boot animation and sound" Opacity="0.7" Margin="0 0 0 10"/>
                
                <CheckBox x:Name="BootAnimAndSoundCheckBox" Content="Enable boot animation and sound" IsChecked="False" Margin="0 10"/></StackPanel>
            </Border>
            
            <!-- System Information -->
            <Border Classes="Card">
              <StackPanel>
                <TextBlock Text="System Information" Classes="SubHeader"/>
                
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0 10">
                  <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" FontWeight="SemiBold" Width="120"/>
                  <TextBlock Grid.Row="0" Grid.Column="1" Text="Acer Nitro 5"/>
                  
                  <TextBlock Grid.Row="1" Grid.Column="0" Text="OS:" FontWeight="SemiBold" Width="120" Margin="0 5 0 0"/>
                  <TextBlock Grid.Row="1" Grid.Column="1" Text="Linux" Margin="0 5 0 0"/>
                  
                  <TextBlock Grid.Row="2" Grid.Column="0" Text="Kernel:" FontWeight="SemiBold" Width="120" Margin="0 5 0 0"/>
                  <TextBlock Grid.Row="2" Grid.Column="1" Text="6.1.0-generic" Margin="0 5 0 0"/>
                  
                  <TextBlock Grid.Row="3" Grid.Column="0" Text="Driver Version:" FontWeight="SemiBold" Width="120" Margin="0 5 0 0"/>
                  <TextBlock Grid.Row="3" Grid.Column="1" Text="linuwu_sense 1.0.5" Margin="0 5 0 0"/>
                </Grid>
                
                <Button x:Name="UpdatesButton" Content="Check for Updates" Margin="0 15 0 0"/>
              </StackPanel>
            </Border>
          </StackPanel>
        </ScrollViewer>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
